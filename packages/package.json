{
  "name": "@pelatform/ui",
  "version": "1.5.2",
  "description": "A Modern and Minimal React UI Library built with TailwindCSS.",
  "author": "Pelatform Dev",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./css": "./css/theme.css",
    "./css/*": "./css/components/*.css",
    ".": {
      "development": {
        "types": "./src/dev/index.ts",
        "default": "./src/dev/index.ts"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./animation": {
      "development": {
        "types": "./src/dev/animation.ts",
        "default": "./src/dev/animation.ts"
      },
      "import": {
        "types": "./dist/animation.d.ts",
        "default": "./dist/animation.js"
      },
      "require": {
        "types": "./dist/animation.d.cts",
        "default": "./dist/animation.cjs"
      }
    },
    "./aria": {
      "development": {
        "types": "./src/dev/aria.ts",
        "default": "./src/dev/aria.ts"
      },
      "import": {
        "types": "./dist/aria.d.ts",
        "default": "./dist/aria.js"
      },
      "require": {
        "types": "./dist/aria.d.cts",
        "default": "./dist/aria.cjs"
      }
    },
    "./base": {
      "development": {
        "types": "./src/dev/base.ts",
        "default": "./src/dev/base.ts"
      },
      "import": {
        "types": "./dist/base.d.ts",
        "default": "./dist/base.js"
      },
      "require": {
        "types": "./dist/base.d.cts",
        "default": "./dist/base.cjs"
      }
    },
    "./components": {
      "development": {
        "types": "./src/dev/components.ts",
        "default": "./src/dev/components.ts"
      },
      "import": {
        "types": "./dist/components.d.ts",
        "default": "./dist/components.js"
      },
      "require": {
        "types": "./dist/components.d.cts",
        "default": "./dist/components.cjs"
      }
    },
    "./default": {
      "development": {
        "types": "./src/dev/default.ts",
        "default": "./src/dev/default.ts"
      },
      "import": {
        "types": "./dist/default.d.ts",
        "default": "./dist/default.js"
      },
      "require": {
        "types": "./dist/default.d.cts",
        "default": "./dist/default.cjs"
      }
    },
    "./hooks": {
      "development": {
        "types": "./src/dev/hooks.ts",
        "default": "./src/dev/hooks.ts"
      },
      "import": {
        "types": "./dist/hooks.d.ts",
        "default": "./dist/hooks.js"
      },
      "require": {
        "types": "./dist/hooks.d.cts",
        "default": "./dist/hooks.cjs"
      }
    },
    "./re/*": {
      "development": {
        "types": "./src/re-export/*.ts",
        "default": "./src/re-export/*.ts"
      },
      "import": {
        "types": "./dist/re-export/*.d.ts",
        "default": "./dist/re-export/*.js"
      },
      "require": {
        "types": "./dist/re-export/*.d.cts",
        "default": "./dist/re-export/*.cjs"
      }
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "clean:all": "rimraf .turbo dist node_modules",
    "dev": "tsup --watch",
    "build": "tsup --clean --dts",
    "types:check": "tsc --noEmit",
    "prepack": "node scripts/prepare-publish.mjs",
    "postpack": "git checkout -- package.json"
  },
  "homepage": "https://devpelatform.github.io/ui",
  "files": [
    "css/*",
    "dist/*",
    "README.md"
  ],
  "keywords": [
    "pelatform",
    "ui",
    "tailwindcss",
    "react"
  ],
  "dependencies": {
    "@base-ui-components/react": "1.0.0-beta.4",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@headless-tree/core": "^1.5.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-form": "^1.23.8",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.548.0",
    "motion": "^12.23.24",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react-aria": "^3.44.0",
    "react-aria-components": "^1.13.0",
    "react-day-picker": "^9.11.1",
    "react-hook-form": "^7.65.0",
    "react-phone-number-input": "^3.4.13",
    "react-resizable-panels": "^3.0.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0",
    "vaul": "^1.1.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "esbuild-plugin-preserve-directives": "^0.0.11",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.16",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
